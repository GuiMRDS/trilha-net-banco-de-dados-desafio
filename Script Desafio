-- Conhecendo as Tabelas
SELECT * FROM Atores;
SELECT * FROM ElencoFilme;
SELECT * FROM Filmes;
SELECT * FROM Generos;

-- 1
SELECT 
	nome, 
	ano 
FROM Filmes

-- 2 
SELECT 
	Nome, 
	Duracao,
	Ano
FROM Filmes 
ORDER BY Ano ASC;

-- 3
SELECT 
	Nome, 
	Duracao,
	Ano 
FROM Filmes
WHERE Nome = 'De Volta para o Futuro'

-- 4
SELECT 
	Nome, 
	Duracao,
	Ano 
FROM Filmes
WHERE Ano = 1997

-- 5
SELECT 
	Nome, 
	Duracao,
	Ano 
FROM Filmes
WHERE Ano LIKE '%2%'

-- 6
SELECT
	Nome,
	Ano,
	Duracao
FROM Filmes
WHERE Duracao > 100 AND Duracao < 150
ORDER BY Duracao ASC 

-- 7 
SELECT 
	Ano,
	Quantidade
FROM Filmes
ORDER BY Quantidade DESC

-- 8
SELECT 
	Id,
	PrimeiroNome,
	UltimoNome,
	Genero
FROM Atores
WHERE Genero = 'M'

-- 9
SELECT 
	Id,
	PrimeiroNome,
	UltimoNome,
	Genero
FROM Atores
WHERE Genero = 'F'

-- 10
SELECT Nome, Genero FROM Filmes, Generos 

-- 12
SELECT Nome, Genero FROM Filmes, Generos 
WHERE Genero = 'Misterio'
